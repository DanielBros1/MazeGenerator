<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TabObrController">
    <left>
        <Canvas fx:id="canvas" width="1000" height="800" />
    </left>
    <right>
        <VBox fx:id="vbox" spacing="10" style="-fx-background-color: #EDEDED;">
            <HBox spacing="10">
                <Label style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 5;" prefWidth="250" alignment="CENTER">
                    INFORMACJE O LABIRYNCIE
                </Label>
            </HBox>
            <HBox spacing="10">
                <Label text="Width: ${width}" />
                <Label text="Height: ${height}" />
                <Label text="Pixel Size: ${pixelSize}" />
            </HBox>
            <HBox spacing="10">
                <Button text="Przycisk 1" onAction="#handleButton1Action" />
                <Button text="Przycisk 2" onMouseEntered="#handleButton2MouseEntered" onMouseExited="#handleButton2MouseExited" />
            </HBox>
        </VBox>
    </right>
</BorderPane>
